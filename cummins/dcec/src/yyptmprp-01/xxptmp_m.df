  FORMAT "x(8)"
  INITIAL ""
  LABEL "domain"
  POSITION 9
  MAX-WIDTH 16
  ORDER 80

ADD INDEX "xxptmp_index1" ON "xxptmp_mstr" 
  AREA "TRANSACTION"
  PRIMARY
  INDEX-FIELD "xxptmp_domain" ASCENDING 
  INDEX-FIELD "xxptmp_site" ASCENDING 
