  FORMAT "X(18)"
  INITIAL ""
  LABEL "父零件"
  POSITION 2
  MAX-WIDTH 36
  ORDER 10

ADD FIELD "xxptmp_comp" OF "xxptmp_mstr" AS character 
  FORMAT "X(18)"
  INITIAL ""
  LABEL "零件"
  POSITION 3
  MAX-WIDTH 36
  ORDER 20

ADD FIELD "xxptmp_site" OF "xxptmp_mstr" AS character 
  FORMAT "X(8)"
  INITIAL ""
  LABEL "地点"
  POSITION 4
  MAX-WIDTH 16
  ORDER 30

ADD FIELD "xxptmp_cust" OF "xxptmp_mstr" AS character 
